<div class="relative mar-top-5 nested-fields">
  <div class="leg-container">
    <div class="flex-row">
      <div class="form-group full no-margin">
        <%= f.select :leg_type, options_for_select(Leg::BET_TYPES), {}, {class: "field_bet_type"} %>
      </div>
    </div>

    <div class="flex-row mar-top-5">
      <div class="form-group full no-margin ui-widget">
        <%= f.text_field :selection, class: "selections field_selection", placeholder: "Selection" %>
      </div>
      <div class="vs"><span>vs</span></div>
      <div class="form-group full no-margin ui-widget opponent-field">
        <%= f.text_field :opponent, class: "selections field_opponent", placeholder: "Opponent" %>
      </div>
    </div>

    <div class="checkbox-group mar-top-5">
      <label class="result-checkbox">
        <%= f.check_box :won, checked: true, class: "field_won" %>
        <span><i class="fa fa-smile-o" aria-hidden="true"></i> Won</span>
      </label>
      <label class="result-checkbox">
        <%= f.check_box :placed, class: "field_placed" %>
        <span><i class="fa fa-meh-o" aria-hidden="true"></i> Placed</span>
      </label>
      <label class="result-checkbox">
        <%= f.check_box :lost, class: "field_lost" %>
        <span><i class="fa fa-frown-o" aria-hidden="true"></i> Lost</span>
      </label>
      <label class="result-checkbox">
        <%= f.check_box :void, class: "field_void" %>
        <span><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Void</span>
      </label>
    </div>
    <%# link_to_remove_association "Remove Selection", f, class: "remove-leg" %>
  </div>
</div>