<div class="acca-card">
  <div class="acca-card-header">
    <h2>
      <small><%= @acca.date %></small>
      <%= @acca.bet_type %>
    </h2>
    <%= link_to "<i class='fa fa-pencil' aria-hidden='true'></i> Edit".html_safe, edit_acca_path(@acca) %>
  </div>
  <ul class="acca-legs">
    <% @acca.legs.each do |leg| %>
      <li>
        <div class="flex-row v-middle">
          <span class="leg-result <%= leg_class(leg) %>"></span>
          <h2>
            <%= Selection.find(leg.selection).name %>
            <small class="muted"><%= leg.event %> | <%= leg.leg_type.titleize %></small>
          </h2>
        </div>
        <p><%= leg.odds %></p>
      </li>
    <% end %>
  </ul>
  <div class="acca-card-footer">
    <span>
      <h2>
        <small>Stake:</small>
        <%= number_to_currency(@acca.stake, unit: "Â£") %>
      </h2>
    </span>
    <span>
      <h2>
        <small>Return:</small>
        <%= number_to_currency(@acca.return, unit: "Â£") %>
      </h2>
    </span>
  </div>
</div>