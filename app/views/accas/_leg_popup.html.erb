<div class="modal-overlay" style="display:none;">
  <div class="modal">
    <div class="modal-body">
      <div id="modal_data">
        <div class="modal-header">
          <h1>Add Leg</h1>
          <a href="#" class="close-modal"></a>
        </div>
        <form class="popup-form">
          <div class="form-group full">
            <select name="bet_type">
              <% Leg::BET_TYPES.each do |bet_type| %>
                <option value="<%= bet_type %>"><%= bet_type %></option>
              <% end %>
            </select>
          </div>
          <div class="form-group full ui-widget">
            <input name="selection" class="selections" placeholder="Selection" />
          </div>
          <div class="form-group full ui-widget football-fields">
            <input name="opponent" class="selections" placeholder="Opponent" />
          </div>
          <div class="checkbox-group mar-top-5">
            <label class="result-checkbox">
              <input type="checkbox" name="won" checked />
              <span><i class="fa fa-smile-o" aria-hidden="true"></i> Won</span>
            </label>
            <label class="result-checkbox">
              <input type="checkbox" name="placed" />
              <span><i class="fa fa-meh-o" aria-hidden="true"></i> Placed</span>
            </label>
            <label class="result-checkbox">
              <input type="checkbox" name="lost" />
              <span><i class="fa fa-frown-o" aria-hidden="true"></i> Lost</span>
            </label>
            <label class="result-checkbox">
              <input type="checkbox" name="void" />
              <span><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Void</span>
            </label>
          </div>
          <div class="form-actions">
            <a href="#" class="btn btn-primary save-leg">Add Selection</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>