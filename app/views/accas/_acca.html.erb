<div class="modal-header">
  <h1>
    Acca <small>[<%= @acca.date.strftime("%d/%m/%Y") %>]</small>
  </h1>
  <a href="#" class="close-modal"></a>
</div>

<table class="outlined mar-top-20">
  <tr>
    <td>Bet Type: <%= @acca.bet_type %></td>
    <td>Category: <%= @acca.category %></td>
  </tr>
  <tr>
    <td>Stake: <%= @acca.stake %></td>
    <td>Return: <%= @acca.return %></td>
  </tr>
</table>

<div class="line-divide"></div>

<% @acca.legs.each do |leg| %>
  <div class="selection-card-container mar-top-5 <%= leg_class(leg) %>">
    <div class="selection-card">
      <div class="selection-card-body">
        <% if [Leg::Type::WIN,Leg::Type::EW,Leg::Type::DOUBLE_CHANCE,Leg::Type::DRAW_NO_BET,].include?(leg.leg_type) %>
          <h2><%= Selection.find(leg.selection).name %></h2>
        <% else %>
          <h2><%= leg.leg_type %></h2>
        <% end %>
        <p class="muted"><%= Selection.find(leg.selection).name %> vs <%= Selection.find(leg.opponent).name %></p>
      </div>
      <div class="selection-card-footer">
        <p class="muted">Leg Type:</p>
        <p class="muted"><%= leg.leg_type %></p>
      </div>
    </div>
  </div>
<% end %>

<div class="divider"></div>

<%= link_to "Delete This Acca", acca_path(@acca), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>